<% layout('layout') -%>
<div class="row">
	<div class="col-lg-12">
		<h1><%= cdcId %></h1>
		<p>Total records: <%= records.length %></p>
		<p>Recorded date range: <%= dateRange %> days</p>
		<table class="table table-responsive table-condensed">
			<% for(var i=0; i<records.length; i++) {%>
			   <tr>
					<td>
						<%= new Date(records[i].timestamp).toUTCString() %>
					</td>
					<td>
						<%= records[i].loc %>
					</td>
					<td>
						<%= records[i].temp %>
					</td>
			   </tr>
			<% } %>
		</table>
	</div>
</div>
<div class="row">
  <div class="col-xs-6">                   
      <a href="/ebolocatemp" class="btn btn-default">Home</a>
  </div>
  <div class="col-xs-6 text-right">    
      <a href="/ebolocatemp/record" class="btn btn-info">Add another record</a>
  </div>
</div>  
